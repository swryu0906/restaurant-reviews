<div class="row">
	<div class="col-sm-4">
		<%= image_tag @restaurant.image_url %>

		<h2>
		  <%= @restaurant.name %>
		</h2>

		<div class="star-rating" data-score= <%= @avg_rating %> ></div>
		<p>
			<strong>Average rating:</strong>
			<%= @avg_rating %>
		</p>
		<p><%= @reviews.length %> reviews</p>



		<p>
		  <strong>Address:</strong>
		  <%= @restaurant.address %>
		</p>

		<p>
		  <strong>Phone:</strong>
		  <%= @restaurant.phone %>
		</p>

		<p>
		  <strong>Website:</strong>
		  <%= link_to @restaurant.website, @restaurant.website, target: '_blank' %>
		</p>
	</div>

	<div class="col-sm-8">
		<% if @reviews.blank? %>
			<h3>No reviews yet. Be the first to write one!</h3>
		<% else %>
			<table class="table">
				<tbody>
					<% @reviews.order(:created_at).each do |review| %>
						<tr>
							<td>
								<div class="star-rating" data-score= <%= review.rating %> ></div>
								<p><%= review.rating %></p>
								<p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
							</td>
						</tr>
					<% end %>			
				</tbody>
			</table>
		<% end %>
	</div>
</div>



<%= link_to 'Write a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>


<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-link' %> |
<%= link_to 'Back', restaurants_path, class: 'btn btn-link' %>


<script>
	$('.star-rating').raty({
		path: 'https://s3.amazonaws.com/restaurant-reviews-0906/stars',
		score: function() {
		    return $(this).attr('data-score');
		},
		readOnly: true
	});
</script>